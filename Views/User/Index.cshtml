@model UserModel

@{
    ViewData["Title"] = "User Form";
}

<h1>User Form</h1>

<form asp-action="Index" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Emial" class="control-label"></label>
        <input asp-for="Emial" class="form-control" />
        <span asp-validation-for="Emial" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateOfBirth" class="control-label"></label>
        <input asp-for="DateOfBirth" class="form-control" type="date" />
        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Gender" class="control-label"></label><br />
        <input type="radio" asp-for="Gender" value="Male" /> Male
        <input type="radio" asp-for="Gender" value="Female" /> Female
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="HighestEducation" class="control-label"></label>
        <select asp-for="HighestEducation" class="form-control" id="educationDropdown">
            <option value="">-- Select Education --</option>
            <option value="Xth Standard">Xth Standard</option>
            <option value="12th Standard">12th Standard</option>
            <option value="Engineering">Engineering</option>
        </select>
        <span asp-validation-for="HighestEducation" class="text-danger"></span>
    </div>
    <div class="form-group" id="branchDropdown" style="display:none;">
        <label asp-for="EngineeringBranch" class="control-label"></label>
        <select asp-for="EngineeringBranch" class="form-control">
            <option value="">-- Select Branch --</option>
            <option value="ECE">ECE</option>
            <option value="CSE">CSE</option>
            <option value="IT">IT</option>
            <option value="EIE">EIE</option>
        </select>
        <span asp-validation-for="EngineeringBranch" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        
        document.getElementById("educationDropdown").addEventListener("change", function () {
            var education = this.value;
            var branchDropdown = document.getElementById("branchDropdown");
            if (education === "Engineering") {
                branchDropdown.style.display = "block";
            } else {
                branchDropdown.style.display = "none";
                document.getElementById("EngineeringBranch").value = "";
            }
        });
    </script>
}
